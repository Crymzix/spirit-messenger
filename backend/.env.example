# Server Configuration
PORT=3000
NODE_ENV=development

# Database
# Get this from Supabase Dashboard -> Settings -> Database -> Connection string (URI)
# Format: postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:your-password@db.xxxxx.supabase.co:5432/postgres

# Supabase Configuration
# Get these from Supabase Dashboard -> Settings -> API
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# Admin API Configuration
# Secret key for admin API endpoints (used to manage bots)
# Generate a strong random string for production
ADMIN_API_KEY=your-admin-api-key-here

# CORS Configuration
# For Tauri desktop app
CORS_ORIGIN=tauri://localhost

# AI Service (OpenRouter for multi-LLM access)
# Get API key from https://openrouter.ai/
# Needed for AI bot functionality
OPENROUTER_API_KEY=your-openrouter-key-here
APP_URL=http://localhost:3000

# Orchestrator Configuration
# Enable the intelligent bot orchestrator for autonomous messages
ENABLE_ORCHESTRATOR=true
ORCHESTRATOR_MODEL=tngtech/deepseek-r1t2-chimera:free

# Personal Message Auto-Update Configuration
# Enable automatic updating of bot personal messages based on mood
ENABLE_PERSONAL_MESSAGE_AUTO_UPDATE=true

# How often to check if bots need personal message updates (default: 2 hours)
PERSONAL_MESSAGE_CHECK_INTERVAL_MS=7200000

# Minimum time between personal message updates (default: 6 hours for all bots)
PERSONAL_MESSAGE_MIN_UPDATE_INTERVAL_MS=21600000

# Maximum time between personal message updates by personality type (ms)
PERSONAL_MESSAGE_MAX_INTERVAL_QUIRKY_MS=43200000
PERSONAL_MESSAGE_MAX_INTERVAL_FRIENDLY_MS=64800000
PERSONAL_MESSAGE_MAX_INTERVAL_PROFESSIONAL_MS=86400000
PERSONAL_MESSAGE_MAX_INTERVAL_INTELLECTUAL_MS=86400000
PERSONAL_MESSAGE_MAX_INTERVAL_FLIRTY_MS=43200000
PERSONAL_MESSAGE_MAX_INTERVAL_CASUAL_MS=43200000

# Mood shift threshold for triggering personal message update (default: 2.0 on 0-10 scale)
PERSONAL_MESSAGE_MOOD_SHIFT_THRESHOLD=2.0

# For the news banners
NEWS_API_KEY=new-api-key

# Twilio Configuration (for WebRTC ICE servers)
# Get these from Twilio Console -> Account -> API Keys & Tokens
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# Klipy API Configuration (for GIFs, stickers, and memes)
# Get API key from https://docs.klipy.com/getting-started
KLIPY_API_KEY=your-klipy-api-key
